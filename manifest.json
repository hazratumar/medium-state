{
  "manifest_version": 3,
  "name": "Medium API Extension",
  "version": "1.0",
  "permissions": ["activeTab"],
  "host_permissions": ["*://medium.com/*"],
  "content_scripts": [{
    "matches": ["*://medium.com/*"],
    "js": ["content.js"]
  }],
  "action": {
    "default_popup": "popup.html"
  }
}